<!-- Loop over each object in the 'Plants' array -->

<div class="row justify-content-center">
  {{#each plants as |plant| }}
  <div class="card mt-4 mx-2 col-md-5">
    <a class="card-header text-center bg-dark" href="/plant/{{plant.id}}">
      <h2>{{plant.name}}</h2>
    </a>
    <div class="card-body bg-light">
      <p class="card-text">{{plant.classification}}</p>
      <p class="card-text"><small class="text-muted">Posted by: {{plant.user.name}} on {{formatDate plant.date_created}}</small></p>
    </div>
  </div>
  {{/each}}
</div>